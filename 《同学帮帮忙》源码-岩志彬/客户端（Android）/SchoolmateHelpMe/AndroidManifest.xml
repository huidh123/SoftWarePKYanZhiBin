        <activity
            android:name=".PublishProblemActivity"
            android:label="@string/title_activity_publish_problem" >
        </activity>
        <activity
            android:name=".RankingListActivity"
            android:label="@string/title_activity_ranking_list" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".UpdatePasswordActivity"
            android:label="@string/title_activity_update_password" >
        </activity>
        <activity
            android:name=".MyPublishProblemShowActivity"
            android:label="@string/title_activity_my_publish_problem_show" >
        </activity>
        <activity
            android:name=".MySolveProblemShowActivity"
            android:label="@string/title_activity_my_solve_problem_show" >
        </activity>
        <activity
            android:name=".OtherPeopleInformationShowActivity"
            android:label="@string/title_activity_other_people_information_show" >
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
    </application>

</manifest>
