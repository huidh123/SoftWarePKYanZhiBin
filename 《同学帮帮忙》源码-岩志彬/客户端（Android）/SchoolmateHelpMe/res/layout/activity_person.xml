<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF">
    
    <include layout="@layout/titlebar"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/person_advice"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_advice"/>
        
        <View 
        	android:layout_width="0dp"
        	android:layout_weight="1"
        	android:layout_height="25dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="#CD5C5C"
            android:layout_marginRight="8dp"
            android:orientation="horizontal" >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/moneyshowquestion" />
         <TextView
              android:id="@+id/person_points"
              android:layout_width="wrap_content"
              android:layout_height="25dp"
              android:background="#CD5C5C"
              android:layout_marginBottom="1dp"
              android:layout_marginRight="8dp"
              android:gravity="center_vertical"
              android:textColor="#FFFFFF"
              android:textSize="20dp"
              android:textStyle="bold" />
        </LinearLayout>
        	
    </LinearLayout>
    
    <LinearLayout 
        android:focusable="true"  
      	android:focusableInTouchMode="true" 
      	android:layout_width="0px"  
      	android:layout_height="0px" /> 
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <View 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        
        <ImageView
        	android:id="@+id/person_pic"
        	android:layout_width="70dp"
        	android:layout_height="70dp"
        	android:layout_marginLeft="8dp"
        	android:paddingRight="2dp"
        	android:layout_marginTop="5dp" />
        
        <View 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_height="30dp"
        android:orientation="horizontal" >
        
        <View 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        
        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:paddingLeft="3dp"
            android:maxLength="30"
            android:textColor="#3D59AB"
            android:textSize="20dp"
            android:textStyle="bold"/>
        
        <View 
            android:layout_width="5dp"
            android:layout_height="fill_parent"/>
        
        <ImageView
            android:id="@+id/person_sex"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="2dp"/>
        
        <View 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp"
        	android:paddingTop="12dp"
        	android:paddingBottom="12dp"
        	android:textSize="16dp"
        	android:textColor="#696969"
            android:text="学院："/>
        
        <TextView 
            android:id="@+id/person_academe"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:background="@null"
        	android:textSize="16sp"
        	android:textColor="#696969"
        	android:textColorHint="#888"
        	android:paddingRight="10dp"
        	android:paddingTop="12dp"
        	android:paddingBottom="12dp"
        	android:gravity="left"
        	android:singleLine="true"
        	android:maxLength="9"/>
        
    </LinearLayout>
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#6456648f"/>
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#ffffffff"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp"
        	android:paddingTop="12dp"
        	android:paddingBottom="12dp"
        	android:textSize="16dp"
        	android:textColor="#696969"
            android:text="专业："/>
        
        <TextView 
            android:id="@+id/person_profession"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:background="@null"
        	android:textSize="16sp"
        	android:textColor="#696969"
        	android:paddingRight="10dp"
        	android:paddingTop="12dp"
        	android:paddingBottom="12dp"
        	android:gravity="left"
        	android:singleLine="true"/>
        
    </LinearLayout>
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#6456648f"/>
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#ffffffff"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp"
        	android:paddingTop="12dp"
        	android:paddingBottom="12dp"
        	android:textSize="16dp"
        	android:textColor="#696969"
            android:text="学号："/>
        
        <TextView 
            android:id="@+id/person_id"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:background="@null"
        	android:textSize="16sp"
        	android:textColor="#696969"
        	android:textColorHint="#888"
        	android:paddingRight="10dp"
        	android:paddingTop="12dp"
        	android:paddingBottom="12dp"
        	android:gravity="left"
        	android:singleLine="true"
        	android:maxLength="9"/>
        
    </LinearLayout>
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#6456648f"/>
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#ffffffff"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp"
        	android:paddingTop="12dp"
        	android:paddingBottom="12dp"
        	android:textSize="16dp"
        	android:textColor="#696969"
            android:text="QQ："/>
        
        <EditText 
            android:id="@+id/person_qqnumber"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:background="@null"
        	android:textSize="16sp"
        	android:textColor="#696969"
        	android:paddingRight="10dp"
        	android:paddingTop="12dp"
        	android:paddingBottom="12dp"
        	android:gravity="left"
        	android:inputType="number"
        	android:singleLine="true"/>
        
    </LinearLayout>
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#6456648f"/>
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#ffffffff"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp"
        	android:paddingTop="12dp"
        	android:paddingBottom="12dp"
        	android:textSize="16dp"
        	android:textColor="#696969"
            android:text="心情："/>
        
        <EditText
        	android:id="@+id/person_signature"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:layout_marginRight="4dp"
        	android:textColor="#191970"
        	android:textSize="17dp"
        	android:lines="4"
            android:inputType="textMultiLine"
        	android:background="#FFFFFF"
        	android:hint="你若安好便是晴天...
        	听说下雨天，巧克力和音乐更配哦~                                       今天你是啥心情呢"
        	android:gravity="center"
        />
        
    </LinearLayout>
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#6456648f"/>
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#ffffffff"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/showquestionback"
        android:orientation="horizontal">
        <Button 
         	android:id="@+id/person_back"
         	android:layout_width="170dp"
         	android:layout_height="40dp"
         	android:background="@drawable/back"/>
       <Button
           	android:id="@+id/person_update"
           	android:layout_width="match_parent"
           	android:layout_height="40dp"
           	android:background="@drawable/update" />
    </LinearLayout>
    
</LinearLayout>
